{
    "name": "vardvalportal",
    "version": "1.0.0",
    "scripts": {
        "[start-app]": "concurrent \"npm run _watch-typescript\" \"npm run _local-webserver\" \"npm run _watch-css\"",
        "_compile-typescript": "tsc",
        "_watch-typescript": "tsc -w",
        "_local-webserver": "lite-server",
        "_compile-css": "node-sass --include-path content content/main.scss content/main.css",
        "_watch-css": "nodemon -e scss --watch content/  --exec \"npm run _compile-css\"",
        "_clean_build_output": "rimraf ./BuildOutput"
    },
    "dependencies": {
        "@angular/common": "~2.2.0",
        "@angular/compiler": "~2.2.0",
        "@angular/core": "~2.2.0",
        "@angular/forms": "~2.2.0",
        "@angular/http": "~2.2.0",
        "@angular/platform-browser": "~2.2.0",
        "@angular/platform-browser-dynamic": "~2.2.0",
        "@angular/router": "~3.2.0",
        "@angular/upgrade": "~2.2.0",
        "systemjs": "0.19.40",
        "core-js": "~2.4.1",
        "reflect-metadata": "~0.1.8",
        "rxjs": "5.0.0-beta.12",
        "zone.js": "~0.6.26",
        "jquery": "^3.1.1",
        "jquery.scrollbar": "^0.2.11",
        "font-awesome": "^4.7.0",
        "@types/jquery": "^2.0.40",
        "@types/core-js": "0.9.36",
        "@types/node": "7.0.7"
    },
    "devDependencies": {
        "body-parser": "^1.16.1",
        "concurrently": "~3.3.0",
        "lite-server": "^2.2.2",
        "node-sass": "~4.5.0",
        "nodemon": "^1.11.0",
        "task-runner-js": "^2.1.4",
        "typescript": "~2.1.6",
        "rimraf": "2.6.1",
        "jasmine": "2.5.3",
        "@types/jasmine": "2.5.44"
    },
    "-vs-binding": {
        "ProjectOpened": ["_watch-typescript", "_watch-css"]
    }
}